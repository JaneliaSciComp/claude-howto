{
  "sandbox": {
    "permissions": {
      "additionalAllowedPaths": [
        "~/.pixi",
        "~/.local/share/pixi"
      ]
    }
  },
  "permissions": {
    "defaultMode": "acceptEdits",
    "allow": [
      "Bash(git clone:*)",
      "Bash(git status:*)",
      "Bash(git log:*)"
    ],
    "deny": [
      "Read(**/.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/var/**)",
      "Read(**/secrets/**)",
      "Read(**/credentials/**)",
      "Read(**/.aws/**)",
      "Read(**/.ssh/**)"
    ]
  }
}
