{
  "sandbox": {
    "enabled": true,
    "autoAllowBashIfSandboxed": true
  },
  "permissions": {
    "allow": [
      "Read(//groups/scicompsoft/home/rokickik/dev/**)",
      "Edit(//groups/scicompsoft/home/rokickik/dev/**)",
      "WebFetch",
      "WebSearch",
      "Bash(git clone:*)",
